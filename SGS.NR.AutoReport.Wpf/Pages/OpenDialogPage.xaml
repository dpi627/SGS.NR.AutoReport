<Page x:Class="SGS.NR.AutoReport.Wpf.Pages.OpenDialogPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:SGS.NR.AutoReport.Wpf.Pages"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:vm="clr-namespace:SGS.NR.AutoReport.Wpf.ViewModels"
      d:DataContext="{d:DesignInstance Type=vm:OpenDialogViewModel}"
      mc:Ignorable="d"
      d:DesignHeight="600" d:DesignWidth="400" d:Background="#FFF"
      Title="OpenDialogPage">

    <Grid>
        <Button
            Content="Import Excel"
            Grid.Row="0"
            Grid.Column="0"
            HorizontalAlignment="Left"
            Margin="10"
            Command="{Binding OpenDialogCommand}"
            Style="{StaticResource MaterialDesignRaisedButton}"
            materialDesign:ButtonAssist.CornerRadius="5"/>
    </Grid>
</Page>
